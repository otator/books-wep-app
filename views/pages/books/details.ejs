<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <a href="/">Home</a>
    <%- include('../layout/detail') %>
        <h5>
            ISBN: <%=singleDataBooks[0].isbn %>
        </h5>
        <h5>
            BookShelf: <%=singleDataBooks[0].bookshelf %>
        </h5>
        <form action="/deleteData/<%= singleDataBooks[0].isbn%>?_method=delete" method="post">
            <button>Delete Book</button>
        </form>

        <button id="update-button">Update</button>
        <section id="form-section">
            <form action="/updateData/<%=singleDataBooks[0].isbn%>?_method=put" method="post">
                <input type="text" name="img_url" id="" value="<%=singleDataBooks[0].img_url  %>">
                <input type="text" name="title" id="" value="<%=singleDataBooks[0].title  %>">
                <input type="text" name="author" id="" value="<%=singleDataBooks[0].author  %>">
                <input type="text" name="isbn" id="" value="<%=singleDataBooks[0].isbn  %>">
                <textarea name="description" id="" cols="30" rows="10"><%=singleDataBooks[0].descriptions%></textarea>
                <button>Update Book</button>
            </form>

        </section>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="/app.js"></script>

</body>

</html>