<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <!-- <link rel="stylesheet" href="../../public/style/layout.css">-->
  <link rel="stylesheet" href="style/reset.css">
  <link rel="stylesheet" href="style/layout.css">
  <link rel="stylesheet" href="style/modules.css">


</head>

<body>
  <%- include('layout/header') %>

    <h2>
      <span>
        <%= books.length %>
      </span> Saved Books
    </h2>
    <div class="main-container">
      <% books.forEach(item=>{%>
        <div class="container">
          <img src="<%= item.img_url %> " alt="">
          <h4>
            <%= item.title %>
          </h4>
          <h5>
            <%= item.author %>
          </h5>
          <p>
            <%= item.description %>
          </p>

          <form style="visibility:hidden" action="/books/<%=item.id %>" method="get">


            <button id="view-details-button" style="visibility:visible;" type="submit">View Details</button>
          </form>

        </div>

        <%})%>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/app.js"></script>

</body>

</html>